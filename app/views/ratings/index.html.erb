


<div class="row">
  <div class="col-sm-6">
    <h1>Ratings</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_rating_path, class: 'btn btn-primary' do %>
    Add New Rating
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Value</th>
            <th>Movie</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @ratings.each do |rating| %>
        <%= content_tag :tr, id: dom_id(rating), class: dom_class(rating) do %>
          

                      <td><%= rating.value %></td>
                      <td><%= rating.movie.title %></td>
          
          
            <td><%= link_to 'Show', rating %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
