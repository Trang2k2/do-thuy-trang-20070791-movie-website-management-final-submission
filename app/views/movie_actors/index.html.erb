


<div class="row">
  <div class="col-sm-6">
    <h1>Movie_actors</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_movie_actor_path, class: 'btn btn-primary' do %>
    Add New Movie actor
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Movie</th>
            <th>Actor</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @movie_actors.each do |movie_actor| %>
        <%= content_tag :tr, id: dom_id(movie_actor), class: dom_class(movie_actor) do %>
          

                      <td><%= movie_actor.movie.title %></td>
                      <td><%= movie_actor.actor.name %></td>
          
          
            <td><%= link_to 'Show', movie_actor %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
