


<div class="row">
  <div class="col-sm-6">
    <h1>Actors</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_actor_path, class: 'btn btn-primary' do %>
    Add New Actor
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            
      </tr>
    </thead>

    <tbody>
      <% @actors.each do |actor| %>
        <%= content_tag :tr, id: dom_id(actor), class: dom_class(actor) do %>
          
            <td><%= link_to actor.name, actor %></td>
          

          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
