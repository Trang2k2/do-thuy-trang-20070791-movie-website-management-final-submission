<div class="page-header">
  <%= link_to languages_path, class: 'btn btn-default' do %>
    All Languages
  <% end %>
  <%= link_to edit_language_path(@language), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show language</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @language.name %></dd>
  <dt>Movie:</dt>
  <dd><%= @language.movie.title %></dd>
</dl>
