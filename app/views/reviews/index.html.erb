


<div class="row">
  <div class="col-sm-6">
    <h1>Reviews</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_review_path, class: 'btn btn-primary' do %>
    Add New Review
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Content</th>
            <th>Rating</th>
            <th>Movie</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @reviews.each do |review| %>
        <%= content_tag :tr, id: dom_id(review), class: dom_class(review) do %>
          

                      <td><%= review.content %></td>
                      <td><%= review.rating %></td>
                      <td><%= review.movie.title %></td>
          
          
            <td><%= link_to 'Show', review %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
